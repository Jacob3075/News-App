<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".ui.activities.SignUpScreen">

	<TextView
			android:id="@+id/signUpText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="25dp"
			android:fontFamily="sans-serif"
			android:text="Sign Up"
			android:textAlignment="center"
			android:textColor="@android:color/black"
			android:textSize="34sp"
			android:textStyle="bold"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"/>

	<EditText
			android:id="@+id/editEmailAdress"
			android:layout_width="300dp"
			android:layout_height="55dp"
			android:layout_marginTop="15dp"
			android:autofillHints=""
			android:background="@drawable/bg_custom"
			android:hint="Enter Email Address"
			android:inputType="textEmailAddress"
			android:padding="15dp"
			android:textColor="@android:color/darker_gray"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.495"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/signUpText"/>

	<EditText
			android:id="@+id/editTextPassword"
			android:layout_width="300dp"
			android:layout_height="55dp"
			android:layout_marginTop="15dp"
			android:autofillHints=""
			android:background="@drawable/bg_custom"
			android:hint="Enter Password"
			android:inputType="textPassword"
			android:padding="15dp"
			android:textColor="@android:color/darker_gray"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/editEmailAdress"/>

	<View
			android:id="@+id/line1"
			android:layout_width="268dp"
			android:layout_height="2dp"
			android:layout_marginTop="20dp"
			android:background="@android:color/darker_gray"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/createAccount"/>

	<TextView
			android:id="@+id/createAccount"
			android:layout_width="300dp"
			android:layout_height="55dp"
			android:layout_marginTop="20dp"
			android:background="@drawable/rounded_corner"
			android:clickable="true"
			android:drawablePadding="15dp"
			android:focusable="true"
			android:foreground="?android:attr/selectableItemBackgroundBorderless"
			android:gravity="center"
			android:paddingStart="20dp"
			android:paddingTop="12dp"
			android:paddingEnd="20dp"
			android:paddingBottom="12dp"
			android:text="Create Account"
			android:textColor="@android:color/black"
			android:textSize="22sp"
			android:textStyle="bold"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.495"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/editTextPassword"/>

	<TextView
			android:id="@+id/signUp_google"
			android:layout_width="300dp"
			android:layout_height="55dp"
			android:layout_marginTop="20dp"
			android:background="@drawable/rounded_corner"
			android:clickable="true"
			android:drawablePadding="-10dp"
			android:focusable="true"
			android:foreground="?android:attr/selectableItemBackgroundBorderless"
			android:gravity="center"
			android:paddingStart="40dp"
			android:paddingTop="12dp"
			android:paddingEnd="20dp"
			android:paddingBottom="12dp"
			android:text="Sign Up with Google"
			android:textColor="@android:color/black"
			android:textSize="20sp"
			android:textStyle="bold"
			app:drawableStartCompat="@drawable/gg"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.504"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/line1"/>

	<TextView
			android:id="@+id/backToLogin"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="25dp"
			android:clickable="true"
			android:focusable="true"
			android:text="Back to Login"
			android:textColor="@android:color/holo_blue_dark"
			android:textSize="20sp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/signUp_google"/>


</androidx.constraintlayout.widget.ConstraintLayout>
