<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".ui.activities.LoginScreen">

	<TextView
			android:id="@+id/welcome"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="50dp"
			android:fontFamily="sans-serif"
			android:text="Welcome to News app"
			android:textAlignment="center"
			android:textColor="@android:color/black"
			android:textSize="30sp"
			android:textStyle="bold"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			android:layout_marginBottom="52dp"
			app:layout_constraintBottom_toTopOf="@+id/userNameInput"/>

	<EditText
			android:id="@+id/userNameInput"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:autofillHints=""
			android:background="@drawable/bg_custom"
			android:hint="Enter User Name"
			android:inputType="textPersonName"
			android:padding="15dp"
			android:textColor="@android:color/darker_gray"
			app:layout_constraintTop_toBottomOf="@+id/welcome"
			android:layout_marginBottom="22dp"
			app:layout_constraintBottom_toTopOf="@+id/emailInput"
			app:layout_constraintStart_toStartOf="@+id/welcome"
			app:layout_constraintEnd_toEndOf="@+id/welcome"/>

	<EditText
			android:id="@+id/emailInput"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:autofillHints=""
			android:background="@drawable/bg_custom"
			android:hint="Enter Email Address"
			android:inputType="textEmailAddress"
			android:padding="15dp"
			android:textColor="@android:color/darker_gray"
			app:layout_constraintTop_toBottomOf="@+id/userNameInput"
			android:layout_marginBottom="16dp"
			app:layout_constraintBottom_toTopOf="@+id/passwordInput"
			app:layout_constraintEnd_toEndOf="@+id/userNameInput"
			app:layout_constraintStart_toStartOf="@+id/userNameInput"/>

	<EditText
			android:id="@+id/passwordInput"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:autofillHints=""
			android:background="@drawable/bg_custom"
			android:hint="Enter Password"
			android:inputType="textPassword"
			android:padding="15dp"
			android:textColor="@android:color/darker_gray"
			app:layout_constraintTop_toBottomOf="@+id/emailInput"
			android:layout_marginBottom="46dp"
			app:layout_constraintBottom_toTopOf="@+id/loginButton"
			app:layout_constraintEnd_toEndOf="@+id/emailInput"
			app:layout_constraintStart_toStartOf="@+id/emailInput"/>

	<TextView
			android:id="@+id/signUpButton"
			android:layout_width="300dp"
			android:layout_height="wrap_content"
			android:background="@drawable/rounded_corner"
			android:clickable="true"
			android:drawablePadding="15dp"
			android:focusable="true"
			android:foreground="?android:attr/selectableItemBackgroundBorderless"
			android:gravity="center"
			android:paddingStart="20dp"
			android:paddingTop="12dp"
			android:paddingEnd="20dp"
			android:paddingBottom="12dp"
			android:text="Sign Up"
			android:textColor="@android:color/black"
			android:textSize="22sp"
			android:textStyle="bold"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/passwordInput"
			android:layout_marginBottom="180dp"
			app:layout_constraintStart_toStartOf="@+id/passwordInput"
			app:layout_constraintEnd_toEndOf="@+id/passwordInput"/>

	<TextView
			android:id="@+id/loginButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:clickable="true"
			android:focusable="true"
			android:text="Login"
			android:textColor="@android:color/holo_blue_dark"
			android:textSize="20sp"
			app:layout_constraintStart_toStartOf="@+id/signUpButton"
			app:layout_constraintRight_toLeftOf="@id/homePage"
			app:layout_constraintTop_toBottomOf="@+id/signUpButton"
			android:layout_marginTop="20dp"
			android:layout_marginStart="4dp"/>

	<TextView
			android:id="@+id/homePage"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:clickable="true"
			app:layout_constraintLeft_toRightOf="@id/loginButton"
			android:focusable="true"
			android:text="Home Page"
			android:textColor="@android:color/holo_blue_dark"
			android:textSize="20sp"
			app:layout_constraintEnd_toEndOf="@+id/signUpButton"
			app:layout_constraintTop_toBottomOf="@+id/signUpButton"
			android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
